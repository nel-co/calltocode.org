{
  "name": "calltocode.org",
  "version": "0.0.0",
  "description": "platform where college students can get development experience by working with nonprofits",
  "main": "index.js",
  "repository": "git@github.com:CodeForSocialGood/calltocode.org.git",
  "author": "c2c team",
  "private": true,
  "engines": {
    "node": "8.6.0"
  },
  "scripts": {
    "prebuild": "rm -rf client/dist/",
    "build": "webpack --bail",
    "prestart": "yarn build",
    "start": "node server/",
    "client:watch": "webpack --watch",
    "server:watch": "nodemon --watch server/ --exec 'node server/'",
    "start:dev": "npm-run-all --parallel client:watch server:watch",
    "pretest": "eslint --ignore-pattern client/dist/**/* --fix client/ server/",
    "test": "ava"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.1.4",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "body-parser": "^1.18.2",
    "css-loader": "^0.28.7",
    "express": "^4.16.1",
    "history": "^4.7.2",
    "html-webpack-plugin": "^2.30.1",
    "mongoose": "^4.12.1",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.6",
    "redux": "^3.7.2",
    "redux-form": "^7.0.4",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "style-loader": "^0.19.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.6.0"
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "eslint": "^4.8.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "ignore-styles": "^5.0.1",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.1",
    "sinon": "^4.0.0",
    "supertest": "^3.0.0"
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register",
      "ignore-styles"
    ],
    "files": [
      "client/src/**/*.test.js",
      "server/**/*.test.js"
    ]
  }
}
